{
  "name": "context-update",
  "description": "Update feature reports with external context from URLs",
  "prompt": "./prompts/base.md\n\n./prompts/context-update.md",
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ]
    }
  },
  "tools": [
    "read",
    "write",
    "web_fetch",
    "web_search",
    "@github"
  ],
  "allowedTools": [
    "read",
    "web_fetch",
    "@github"
  ],
  "resources": [
    "file://config.json",
    "file://docs/features/**/*.md"
  ],
  "model": "claude-sonnet-4"
}
