{
  "name": "feature-report",
  "description": "Create comprehensive feature reports by investigating GitHub repositories",
  "prompt": "./prompts/base.md\n\n./prompts/feature-report.md",
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ]
    }
  },
  "tools": [
    "read",
    "write",
    "web_fetch",
    "web_search",
    "@github"
  ],
  "allowedTools": [
    "read",
    "@github"
  ],
  "resources": [
    "file://config.json",
    "file://docs/features/**/*.md"
  ],
  "model": "claude-sonnet-4"
}
