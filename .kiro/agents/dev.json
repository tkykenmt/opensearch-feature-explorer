{
  "name": "dev",
  "description": "Development and maintenance of this tool itself",
  "prompt": "file://./prompts/dev.md",
  "tools": ["@builtin", "@github", "@opensearch-docs"],
  "allowedTools": ["@builtin", "@github", "@opensearch-docs"],
  "resources": [
    "file://README.md",
    "file://DEVELOPMENT.md",
    "file://.kiro/steering/**/*.md"
  ],
  "mcpServers": {
    "opensearch-docs": {
      "command": "python",
      "args": ["mcp_server.py"]
    },
    "github": {
      "command": "bash",
      "args": ["-c", "GITHUB_PERSONAL_ACCESS_TOKEN=$(gh auth token) npx -y @modelcontextprotocol/server-github"]
    }
  }
}
