{
  "name": "explore",
  "description": "Explore OpenSearch features interactively and update reports",
  "prompt": "./prompts/base.md\n\n./prompts/explore.md",
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ]
    }
  },
  "tools": [
    "read",
    "write",
    "web_fetch",
    "@github"
  ],
  "allowedTools": [
    "read",
    "@github"
  ],
  "resources": [
    "file://config.json",
    "file://docs/features/**/*.md",
    "file://docs/releases/**/*.md"
  ],
  "model": "claude-sonnet-4"
}
